@model Thayloilocnuoc.Models.tblUser

@{
    ViewBag.Title = "Edit"; Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm()) { 
    @Html.ValidationSummary(true)

     <div class="Nvar_Content_Detail">
        <div class="Left_Nvar">
            <img src="/Content/Admin/Icon/folder.png" alt="User" />Add User
        </div>

    </div>
    <div class="Content_Content_Detail">
         
        <div class="tr_1">
            <div class="left_tr1">
                <span>User Name :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.UserName, new { @class = "Leght_5" })

            </div>
        </div>
         <div class="tr_1">
            <div class="left_tr1">
                <span>Password :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Password, new { @class = "Leght_4",@Type="password" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Full Name :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.FullName, new { @class = "Leght_4" })

            </div>
        </div> 
        <div class="tr_1">
            <div class="left_tr1">
                <span>Gender :</span>
            </div>
            <div class="Right_tr1">
               @Html.RadioButtonFor(p=>p.Gender,true,new{@id="Gender",@checked="True"}) : Male
               @Html.RadioButtonFor(p=>p.Gender, false, new { @id="Gender"}): Female

            </div>
        </div>   
        <div class="tr_1">
            <div class="left_tr1">
                <span>Date of Birth :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.DateOfBirth, new { @class = "Leght_5" })
                <script >
                    $(function () {
                        $("#DateOfBirth").datepicker();
                    });
            </script>
            </div>
        </div> 
        
          <div class="tr_1">
            <div class="left_tr1">
                <span>Email :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Email, new { @class = "Leght_3" })

            </div>
        </div> 
          <div class="tr_1">
            <div class="left_tr1">
                <span>Phone :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Phone, new { @class = "Leght_5" })

            </div>
        </div> 
        
          <div class="tr_1">
            <div class="left_tr1">
                <span>Address :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Address, new { @class = "Leght_3" })

            </div>
        </div> 
            
           <div class="tr_1">
            <div class="left_tr1">
                <span>JoinedTime :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.JoinedTime, new { @class = "Leght_4" })

            
              
            <script >
                $(function () {
                    $("#JoinedTime").datepicker();
                });
            </script>
     

             </div>
        </div> 
     
        <div class="tr_1">
            <div class="left_tr1">
                <span>Active :</span>
            </div>
            <div class="Right_tr1">
                       @Html.RadioButtonFor(p=>p.Active,true,new{@id="Gender",@checked="True"}) : Yes
               @Html.RadioButtonFor(p=>p.Active, false, new { @id="Gender"}): No
            </div>
        </div>     
        
        <div class="tr_1">
            <div class="left_tr1">
            </div>
            <div class="Right_tr1">
                <button type="submit" id="btnAdd" name="btnAdd" class="btnAdd">Add</button>
                
            </div>
        </div>
    </div>
}
