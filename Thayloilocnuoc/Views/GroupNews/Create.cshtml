@model Thayloilocnuoc.Models.tblGroupNew

@{
    ViewBag.Title = "Create"; Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 
<script type="text/javascript">
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Images").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>
@using (Html.BeginForm()) {
 
    @Html.ValidationSummary(true)

     
     <div class="Nvar_Content_Detail">
        <div class="Left_Nvar">
            <img src="/Content/Admin/Icon/folder.png" alt="Danh mục sản phẩm" />Add GroupNews
        </div>

    </div>
    <div class="Content_Content_Detail">
        <div class="tr_1">
            <div class="left_tr1" id="Test">
                <span>Select Parent :</span>
            </div>
            <div class="Right_tr1">
                 @Html.DropDownList("drMenu","======= [Menu Parent]=======")
             

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Name :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Name, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1"><span>iCon :</span></div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Images, new { @class = "Leght_4" })&nbsp;<input id="SelectImages" type="button" value="Browser" />

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Content :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextAreaFor(p => p.Content, new { @class = "Leght_6" })

            </div>
        </div>         
        <div class="tr_1">
            <div class="left_tr1">
                <span>Title Meta :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Title, new { @class = "Leght_2" })
            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Description Meta :</span>
            </div>
            <div class="Right_tr1">

                @Html.TextAreaFor(p=>p.Description, new { @class = "Leght_6" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Keyword Meta :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextAreaFor(p=>p.Keyword, new { @class = "Leght_6" })
            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Ord:</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Ord, new { @class="txtWarraty",@Value=@Html.Raw(ViewBag.Ord)})
                  
            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Homes :</span>
            </div>
            <div class="Right_tr1">
               @{ bool Index = false ? true : false; }
                    @Html.CheckBoxFor(p => Index ) 
            </div>
        </div>
         
        <div class="tr_1">
            <div class="left_tr1">
                <span>Active :</span>
            </div>
            <div class="Right_tr1">
                          @{ bool Active = true ? true : false; }
                    @Html.CheckBoxFor(p => Active ) 
            </div>
        </div>     
        
        <div class="tr_1">
            <div class="left_tr1">
            </div>
            <div class="Right_tr1">
                <button type="submit" id="btnAdd" name="btnAdd" class="btnAdd">Add</button>
                
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
    });

</script>