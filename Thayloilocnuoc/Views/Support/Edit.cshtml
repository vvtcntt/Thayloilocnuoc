@model Thayloilocnuoc.Models.tblSupport

@{
    ViewBag.Title = "Create"; Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Images").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

@using (Html.BeginForm())
{ 
    @Html.ValidationSummary(true)

     
    <div class="Nvar_Content_Detail">
        <div class="Left_Nvar">
            <img src="/Content/Admin/Icon/folder.png" alt="Danh mục sản phẩm" />Edit Suport
        </div>

    </div>
    <div class="Content_Content_Detail">

        <div class="tr_1">
            <div class="left_tr1">
                <span>Name :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Name, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Misson :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Mission, new { @class = "Leght_2" })

            </div>
        </div>
         
        <div class="tr_1">
            <div class="left_tr1">
                <span>Yahoo :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Yahoo, new { @class = "Leght_4" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Skyper :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Skyper, new { @class = "Leght_4" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Mobile :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Mobile, new { @class = "Leght_5" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Phone :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Phone, new { @class = "Leght_5" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Image :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p=>p.Images, new { @class = "Leght_2" })&nbsp;<input id="SelectImages" type="button" value="Browses" />

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Ord:</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Ord, new { @class = "txtWarraty"  })

            </div>
        </div>

         
        <div class="tr_1">
            <div class="left_tr1">
                <span>Active :</span>
            </div>
            <div class="Right_tr1">
                 @{ bool Active = ((Model.Active == null) || (Model.Active == false)) ? false : true; }

                @Html.CheckBoxFor(p => Active)
            </div>
        </div>

        <div class="tr_1">
            <div class="left_tr1">
            </div>
            <div class="Right_tr1">
                <button type="submit" id="btnAdd" name="btnAdd" class="btnAdd">Save</button>

            </div>
        </div>
    </div>
}
