@model Thayloilocnuoc.Models.tblGroupAgency

@{
    ViewBag.Title = "Create";

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<script type="text/javascript">
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Images").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>
@using (Html.BeginForm())
{

    @Html.ValidationSummary(true)


    <div class="Nvar_Content_Detail">
        <div class="Left_Nvar">
            <img src="/Content/Admin/Icon/folder.png" alt="Danh mục sản phẩm" />Add GroupAgency
        </div>

    </div>
    <div class="Content_Content_Detail">
        <div class="tr_1">
            <div class="left_tr1" id="Test">
                <span>Select Parent :</span>
            </div>
            <div class="Right_tr1">
                @Html.DropDownList("drMenu", "======= [Menu Parent]=======")


            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Name :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Name, new { @class = "Leght_2" })

            </div>
        </div>

        <div class="tr_1">
            <div class="left_tr1">
                <span>Description :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextAreaFor(p => p.Description, new { @class = "Leght_6" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Ord:</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Ord, new { @class = "txtWarraty", @Value = @Html.Raw(ViewBag.Ord) })

            </div>
        </div>


        <div class="tr_1">
            <div class="left_tr1">
                <span>Active :</span>
            </div>
            <div class="Right_tr1">
                @{ bool Active = true ? true : false; }
                @Html.CheckBoxFor(p => Active)
            </div>
        </div>

        <div class="tr_1">
            <div class="left_tr1">
            </div>
            <div class="Right_tr1">
                <button type="submit" id="btnAdd" name="btnAdd" class="btnAdd">Add</button>

            </div>
        </div>
    </div>
}
